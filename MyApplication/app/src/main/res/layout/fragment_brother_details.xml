<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="555dp"
    android:background="#44000000"
    android:layout_gravity="center">
<RelativeLayout
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/fragment_brother_detail_ImageView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ProgressBar
        android:id="@+id/fragment_brother_detail_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>

    <TextView
        android:id="@+id/fragment_brother_detail_name"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/fragment_brother_detail_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="major"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/fragment_brother_detail_crossed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crossed"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/fragment_brother_detail_FunFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fact"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/fragment_brother_detail_WhyJoinedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/why_joined_header"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_brother_detail_WhyJoined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brother joined for this reason"
        android:gravity="center"/>

</LinearLayout>