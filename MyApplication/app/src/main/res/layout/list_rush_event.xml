<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp"
    app:contentPadding="3dp"
    android:layout_margin="3dp"
    app:cardElevation="5dp"
    android:background="#4d757575"
    >

    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/list_rush_events_name_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_rush_event_name"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="test"
                android:paddingBottom="5dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/list_rush_event_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_weight="0.25"
                android:textStyle="bold"
                android:text="test"
                android:textColor="@color/cardview_dark_background"
                android:layout_gravity="center|center"/>

        </LinearLayout>

        <View
            android:id="@+id/list_rush_event_line1"
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_below="@+id/list_rush_events_name_layout"
            android:background="#000"/>

        <TextView
            android:id="@+id/list_rush_event_time"
            android:layout_below="@+id/list_rush_event_line1"
            android:text="Test"
            android:textSize="16.5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_rush_event_time"
            android:text="Test"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_rush_event_location"
            android:gravity="center"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="240dp"
                android:src="@drawable/cluj_map"
                android:layout_below="@+id/list_rush_event_time"
                android:id="@+id/imageView"
                android:layout_alignParentStart="true" />
        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>