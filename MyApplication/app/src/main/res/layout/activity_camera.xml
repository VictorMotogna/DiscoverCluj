<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:orientation="vertical"
    android:hardwareAccelerated="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.pccosmin.testy.activities.CameraActivity"
    >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <com.pccosmin.testy.views.GLViews.MyGLSurfaceView
            android:id="@+id/surfaceviewclass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.pccosmin.testy.views.GLViews.MyGLSurfaceViewTreasureHunt
            android:id="@+id/surfaceviewtreasureclass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </FrameLayout>

    <ImageView
        android:id="@+id/imaginetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/da"
        android:background="#F2DCDCDC"
        android:visibility="visible"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>