<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/activity_map_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        >
    </fragment>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/activity_map_rush_info_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99000000">
        <TextView
            android:id="@+id/activity_map_rush_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="#fff"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/activity_map_rush_date"
                android:text="test"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#fff"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/activity_map_rush_time"
                android:text="test"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_map_rush_location"
            android:text="description"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/activity_map_rush_description"
            android:text="test"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</RelativeLayout>